{
  "manifest_version": 2,
  "name": "Simple Currency Converter (Belarus)",
  "version": "0.1",
  "description": "Select and convert. Simply...",
  "icons": {
    "512": "icons/icon_512.png"
  },
  "background": {
    "scripts": [
      "lib/jquery.js",
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icons/icon_512.png",
    "default_title": "Simple Currency Converter"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "web_accessible_resources": [
    "Content/*"
  ],
  "permissions": [
    "activeTab",
    "contextMenus",
    "https://www.nbrb.by/*",
    "http://www.nbrb.by/*"
  ]
}